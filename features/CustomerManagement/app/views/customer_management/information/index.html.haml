.container
  .row
    #myCarousel.carousel.slide
      .carousel-inner
        -@recommend_logos.each_with_index do |logo,index|
          .item(class = "#{index==0?'active':''}")
            #{image_tag(logo.url)}

    %a.carousel-control.left(href="#myCarousel" data-slide="prev") ‹
    %a.carousel-control.right(href="#myCarousel" data-slide="next") ›


    #category
      %a(href="products_show?category=clothes")
        #clothes
          %strong
            %i.glyphicon.glyphicon-flag
            %span
              服装
      %a(href="products_show?category=shoes")
        #shoes
          %strong
            %i.glyphicon.glyphicon-flag
            %span
              鞋子
      %a(href="products_show?category=bags")
        #bags
          %strong
            %i.glyphicon.glyphicon-flag
            %span
              包包
      %a(href="products_show?category=jewelry")
